<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_white_bg_2"
    tools:context=".activity.guestActivity.CarManagement">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_car_management_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Car Management"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Add Car Button -->

    <!-- Delete Car Button -->

    <Button
        android:id="@+id/btn_add_car"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_car_management_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Add New Car"
        android:textColor="@color/white" />

    <!-- Edit Info Button -->

    <!-- RecyclerView for Car List -->
    <Button
        android:id="@+id/btn_dlt_car"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add_car"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Delete Car"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_edit_car"
        android:layout_width="381dp"
        android:layout_height="48dp"
        android:layout_below="@id/btn_dlt_car"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Edit Info"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_car_list"
        android:layout_width="378dp"
        android:layout_height="418dp"
        android:layout_below="@id/btn_edit_car"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="3dp" />

</RelativeLayout>
