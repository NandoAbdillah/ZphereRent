<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/car_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:fontFamily="@font/poppinsbold"
                android:text="BMW X4 Sports"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/light_orange_rounded_shape"
                android:drawableLeft="@drawable/ic_star_yellow_24dp"
                android:fontFamily="@font/calibri"
                android:padding="6dp"
                android:text="4.5"
                android:textAlignment="textEnd"
                android:textColor="#ffc32d"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppinsregular"
                android:text="2019"
                android:textColor="#a4a7b5"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/calibri"
                android:text="â€¢"
                android:layout_marginHorizontal="5dp"
                android:textColor="#a4a7b5"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/car_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppinsregular"
                android:text="COMFORT CLASS"
                android:textColor="#a4a7b5"
                android:textSize="14sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16sp"
                android:layout_marginRight="4dp"
                android:src="@drawable/seat_icon" />

            <TextView
                android:id="@+id/car_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/calibri"
                android:text="5"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16sp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_mileage" />

            <TextView
                android:id="@+id/car_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/calibri"
                android:text="4"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16sp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_transmission" />

            <TextView
                android:id="@+id/car_transmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/calibri"
                android:text="3"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/car_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bmw_car_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="100">

            <TextView
                android:id="@+id/car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Rp 500.000"
                android:textColor="#3f9dff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="  per day"
                android:textColor="#8ac3ff"
                android:layout_weight="1"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape2"
                android:fontFamily="@font/poppinsbold"
                android:paddingHorizontal="25dp"
                android:paddingVertical="8dp"
                android:text="Sewa"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>