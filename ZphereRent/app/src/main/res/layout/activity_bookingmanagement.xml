<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_white_bg_2"
    tools:context=".activity.guestActivity.BookingActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_booking_management_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Booking Management"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- RecyclerView for Booking List -->

    <!-- Button Layout -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_booking_list"
        android:layout_width="368dp"
        android:layout_height="539dp"
        android:layout_above="@id/button_layout"
        android:layout_below="@id/tv_booking_management_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="35dp" />

    <Button
        android:id="@+id/dlt_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/add_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Add New"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/edit_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="298dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Edit"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>
